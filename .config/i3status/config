# i3status configuration file.
# see "man i3status" for documentation.

# It is important that this file is edited as UTF-8.
# The following line should contain a sharp s:
# ÃŸ
# If the above line is not correctly displayed, fix your editor first!

general {
        colors = true
        color_good = "#00FF00"
        color_bad = "#FF226b"
        color_separator = "#000000"
        interval = 7
}

order += "read_file UPTIME"
order += "wireless _first_"
order += "ethernet _first_"
order += "disk /"
order += "cpu_usage"
order += "cpu_temperature 0"
order += "memory"
order += "battery 0"
order += "tztime local"

read_file UPTIME {
        format = "UP%content"
        path = "/proc/uptime"
}

wireless _first_ {
        format_up = "'%essid' %ip%quality"
        format_down = ""
}

cpu_temperature 0 {
        format = "%degreesC"
        format_above_threshold = "!!%degreesC!!"
        max_threshold = 70
}

battery 0 {
        format = "%status %percentage %remaining@%consumption (%emptytime)"
        format_down = ""
        status_chr = "âš¡ CHR"
        status_bat = "ðŸ”‹ BAT"
        status_unk = "? UNK"
        status_full = "â˜» FULL"
        path = "/sys/class/power_supply/BAT%d/uevent"
        low_threshold = 15
        
}

ethernet _first_ {
        format_up = "%ip@eth0 %speed"
        format_down = ""
}

disk "/" {
        format = "%avail free"
        prefix_type = custom
}

cpu_usage {
        format = "%cpu0,%cpu1,%cpu2,%cpu3 -> %usage "
        format_above_threshold = "!!%cpu0+%cpu1+%cpu2+%cpu3 -> %usage!! "
        
        separator = false
        separator_block_width = 0
}

memory {
        format = "MEM %percentage_free free"
        threshold_degraded = "1G"
        threshold_critical = "500M"
        format_degraded = "MEMORY < %available"
}

tztime local {
        format = "%Y-%m-%d %H:%M:%S"
}
